<!DOCTYPE html>
<html>
  <head>
    <title>Express Notes</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  </head>
  <body>
  <%- include("partials/nav-bar.ejs") %>

  <div class="main-block">

    <h1 style="padding-left:1em;">Express Notes</h1>

    <div class="row" style="width: 100%" >
        <%if(notes.length > 0){%>
      <%  notes.forEach(note=>{%>

        <div class="card-div-parent" style="width: 15em; margin: 1%">
          <div class="card" id="<%=note.id%>">
            <div class="card-header">
              <%=note.title%>
              <p class="left-buttons">
<!--                <a class="link">И.</a>-->
<!--                <a class="link">У.</a>-->
              </p>
            </div>
            <a href="/note/<%=note.id%>" class="non-underline">
                <%if(note.picture){%>
            <img class="card-img-top" src="/images/<%=note.picture%>" alt="Card image cap">
                <%}%>
            <!-- Текстовый контент -->
            <div class="card-body">
              <h5 class="card-title non-underline"><%=note.title%></h5>
              <p class="card-text non-underline"><%=note.description%></p>
            </div>
            </a>
            <div class="card-footer">
              <%=note.date%>
            </div>
          </div>

        </div>

      <%})%>
            <%}else{%>
                <div>Заметок нет</div>
        <%}%>
    </div>
  </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
  </body>
</html>
